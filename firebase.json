{
	"database": {
		"rules": "database.rules.json"
	},
	"hosting" : {
		"public"  : "build",
		"rewrites": [
			{
				"source"     : "**",
				"destination": "/index.html"
			}
		],
		"headers" : [
			{
				"source" : "**/*.@(jpg|jpeg|gif|png)",
				"headers": [
					{
						"key" : "Cache-Control",
						"value" : "max-age=604800"
					}
				]
			},
			{
				"source" : "**/*.@(js|css)",
				"headers": [
					{
						"key"  : "Cache-Control",
						"value": "max-age=86400"
					}
				]
			}
		]
	}
}
